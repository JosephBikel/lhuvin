@model Lhuvin.Billing.ViewModels.CreatePaymentViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <header class="page-header">
        <h2>New Payment</h2>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Name")
            </dt>
            <dd>
                @Html.DisplayFor(c => c.Payment.Client.FirstName)
                @Html.DisplayFor(c => c.Payment.Client.LastName)
            </dd>
            <dt>
                @Html.DisplayNameFor(c => c.Payment.Client.FatherName)
            </dt>
            <dd>
                @Html.DisplayFor(c => c.Payment.Client.FatherName)
            </dd>
        </dl>
    </header>

    <main class="pager">
        @using (Html.BeginForm())
              {
        <div class="form-horizontal">
            @Html.HiddenFor(m => m.Payment.ClientId)
            <div class="row form-group-lg">
                @Html.LabelFor(m => m.Payment.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Payment.Amount, new { @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="row form-group-lg">
                @Html.LabelFor(m => m.Payment.PaymentType, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.Payment.PaymentType, new SelectList(Model.PaymentTypes), new { @class = "form-control" })<br />
                </div>
            </div>
       
            <div class="form-group-lg btn-group-lg">
                <div class="col-md-10">
                    <div class="btn-group-lg">
                        <input type="submit" value="Submit" class="btn  btn-primary" />
                    </div>
                </div>
            </div>
        </div>
         }
   
    </main>

