@model Lhuvin.Billing.Models.ParshaWeek
@{
    ViewBag.Title = "Parsha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div dir="rtl">
    <header class="page-header">
        <h2>נייע פרשה</h2>
    </header>


    <main class="">
        @using (Html.BeginForm())
        {
        <div class="form-horizontal">
            <div class="form-group-lg">

                @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Name, new { type = "text", @class = "form-control" })
            </div>
            <div class="form-group-lg">

                @Html.LabelFor(m => m.StartDate, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.StartDate, new { type = "date", @class = "form-control" })
            </div>
            <div class="form-group-lg">

                @Html.LabelFor(m => m.EndDate, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.EndDate, new { type = "date", @class = "form-control" })
            </div>

            <br />
            <div class="form-group-lg">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary btn-lg" />
                </div>
            </div>
        </div>
        }
    </main>
</div>