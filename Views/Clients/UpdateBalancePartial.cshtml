@model Lhuvin.Billing.ViewModels.UpdateBalanceViewModel

@using (Html.BeginForm("Update", "Balance", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(m => m.Balance.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.NewAmount, new { @class = "control-label col-md-3" })
        @Html.TextBoxFor(m => Model.NewAmount, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NewAmount, null, new { @class = "text-danger col-md-9 col-md-offset-3" })

    </div>

    <div class="form-group">
        <div class="col-md-offset-7 col-md-5">
            <input type="submit" class="btn btn-primary" />
        </div>
    </div>
}
