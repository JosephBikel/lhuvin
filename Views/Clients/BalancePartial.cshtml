@model Lhuvin.Billing.Models.ClientBalance

<header class="row page-header">
    <div class="col-md-10">
        <h2>Balance</h2>
    </div>
    <div class="col-md-2">
        <button id="open" type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Update Balance</button>
    </div>
</header>
<h1 class="text-center">
    <b>Current Balance:</b>
    @Model.Balance
</h1>
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title text-center">Update Balance</h3>
            </div>
            <div class="modal-body">
             @Html.Partial("UpdateBalancePartial", new Lhuvin.Billing.ViewModels.UpdateBalanceViewModel()
        {
            Balance = Model
        })
            </div>
            <div class="modal-footer">
                <button id="close" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>